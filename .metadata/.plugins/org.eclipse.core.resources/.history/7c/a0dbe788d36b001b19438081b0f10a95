	@Test
	public void testGetName() {
		Recipe CuT = new Recipe();
		String name = CuT.getName();
		assertEquals("", name);
	}
	
	@Test
	public void testSetName() {
		Recipe CuT = new Recipe();
		CuT.setName("Latte");
		assertEquals("Latte", CuT.getName());
	}
	
	@Test
	public void testSetNameNull() {
		Recipe CuT = new Recipe();
		CuT.setName(null);
		assertEquals("", CuT.getName());
	}
	
	@Test
	public void testGetPrice() {
		Recipe CuT = new Recipe();
